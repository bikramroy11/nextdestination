<% layout("./layouts/boilerplate") -%>


<div class="row mt-3">
    <div class="col-8 offset-2">
        <h5 class="mt-3">Edit Your listing @<%= listing._id %></h5>
        <form action="/listings/<%= listing._id %>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">

            <div class="mb-3">
                <label for="title" class="form-label mt-3">Title</label>
                <input type="text" name="listing[title]"  class="form-control" value="<%= listing.title %>" required>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
            </div>

            <div class="row">
                <div class="mb-3 col-8">
                    <label for="image" class="form-label">Image</label>
                    <input type="file" name="listing[image]" class="form-control">
                </div>
                <div class="mb-3 col-2 offset-1">
                    <label for="image" class="form-label">Current Image</label><br>
                    <img src="<%= originalImageUrl %>" alt="Image Not Available">
                </div>
            </div>

            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listing[price]" class="form-control" value="<%= listing.price %>" required>
            </div>
            
            <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select name="listing[category]" class="form-select" required>
                <option value="Trending" <%= listing.category === "Trending" ? "selected" : "" %>>Trending</option>
                <option value="Rooms" <%= listing.category === "Rooms" ? "selected" : "" %>>Rooms</option>
                <option value="Iconic Cities" <%= listing.category === "Iconic Cities" ? "selected" : "" %>>Iconic Cities</option>
                <option value="Mountains" <%= listing.category === "Mountains" ? "selected" : "" %>>Mountains</option>
                <option value="Beaches" <%= listing.category === "Beaches" ? "selected" : "" %>>Beaches</option>
                <option value="Castles" <%= listing.category === "Castles" ? "selected" : "" %>>Castles</option>
                <option value="Pools" <%= listing.category === "Pools" ? "selected" : "" %>>Pools</option>
            </select>
            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" class="form-control" value="<%= listing.location%>" required>
            </div>

            <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" class="form-control" value="<%= listing.country %>" required>
            </div>

            <button class="btn btn-primary mb-3">Edit listings</button>
        </form>

        <form action="/listings/<%= listing._id %>">
            <button class="btn btn-secondary mb-3">Back To Previous Page</button>
        </form>
    </div>
</div>

