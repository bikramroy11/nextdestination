<%- layout("/layouts/boilerplate") %>

<script>
    const mapToken = "<%- process.env.MAP_TOKEN %>";
    const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="row">
    <div class="row mt-3 col-8 offset-2">
        <div class="mt-3">
            <div class="card listing-card">
                <div class="mb-2"><h4><%= listing.title %></h4></div>
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="image not available">
                <div class="card-body">
                    <div class="card-text mt-3">
                        <div class="mb-3 fs-5"><p><%= listing.description %></p></div>
                        <div>
                            <% 
                                const taxRate = 0.18;
                                const priceWithTax = Math.round(listing.price * (1 + taxRate));
                            %>
                            <h5>&#x20B9;<%= priceWithTax.toLocaleString("en-IN") %>/Night (incl. GST)</h5>
                        </div>
                        <div class="col-6">
                            <h5><%= listing.location %>, <%= listing.country %></h5>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col col-4">
                            <p>
                                Property owned by: <i><%= listing.owner.username %></i> <br>
                                Owner Email ID: <i><%= listing.owner.email %></i>
                            </p>
                        </div>
                        <div class="col col-8">
                            <% if(!currUser) { %>
                                <div class="alert alert-light" role="alert">Hello <%= listing.owner.username %>, Please <a href="http://localhost:3000/login" class="alert-link">Login Now</a> with Owner ID to access the property . 
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Buttons -->
            <div class="row showBtn text-center mt-3">
                <% if(currUser && currUser._id.equals(listing.owner._id)) {%>
                    <div class="col-md-4 mb-2">
                        <form action="/listings/<%= listing._id %>/edit" method="get">
                            <button class="btn btn-warning w-100">Edit Property</button>
                        </form>
                    </div>
                    <div class="col-md-4 mb-2">
                        <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
                            <button class="btn btn-danger w-100">Delete Property</button>
                        </form>
                    </div>
                <% } %>
                <div class="col-md-4 mb-2">
                    <form action="/listings" method="get">
                        <button class="btn btn-secondary w-100">Back To Home Page</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

        <div class="row">
            <% if(!currUser) { %>
                <div class="col-10 offset-1 alert alert-success" role="alert">
                    <h4 class="alert-heading">Hello Anonymous User!</h4>
                    <p>Aww yeah, you successfully read this important alert message.</p>
                    <hr>
                    <p class="mb-0">You must be a registered user of NextDestination to book this property. <a href="http://localhost:3000/signup">SignUp Immediately</a> <br> Oh! You're already a registered user? Then just... <a href="http://localhost:3000/login">Login Now</a></p>
                </div>
            <% } %>
        </div>
        
        <div class="col-8 offset-2 mt-4 mb-5 booking-box">
            <% if(currUser) { %>
                <div class="col-8 ">
                    <h4>Book This Property</h4>
                    <form action="/listings/<%= listing._id %>/bookings" method="POST" class="booking ms-4 mt-3">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="checkIn" class="form-label">Check-In</label>
                                <input type="date" id="checkIn" name="booking[checkIn]" class="form-control" required>
                            </div>
                            <div class="col-md-6">
                                <label for="checkOut" class="form-label">Check-Out</label>
                                <input type="date" id="checkOut" name="booking[checkOut]" class="form-control" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="guests" class="form-label">Guests</label>
                            <input type="number" id="guests" name="booking[guests]" min="1" value="1" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <h5>Total Price: &#x20B9;<span id="totalPrice"><%= priceWithTax.toLocaleString("en-IN") %></span></h5>
                        </div>

                        <button class="btn btn-success w-100" type="submit">Book Now</button>
                    </form>
                </div>
            <% } %>
        </div>

    <!-- Map -->
    <div class="col-8 offset-2 mb-3">
        <h3>Where you'll be</h3>
        <div id="map"></div>
    </div>


    <!-- Reviews -->
    <div class="col-8 offset-2 mb-3">
        <% if(currUser) { %>
            <h4>Leave a Review</h4>
            <form action="/listings/<%= listing.id %>/reviews" method="post" class="needs-validation" novalidate>
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <fieldset class="starability-slot">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>
                <div class="mb-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea name="review[comment]" id="comment" class="form-control mb-3" required></textarea>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please write a review.</div>
                </div>
                <button class="btn btn-primary mb-3">Submit</button>
            </form>
        <% } %>

        <% if(listing.reviews.length > 0) { %>
            <hr>
            <div class="row">
                <h3 class="mb-3">All Reviews</h3>
                <% listing.reviews.forEach(review => { %>
                    <div class="card review-card col-5 ms-3 mb-3">
                        <div class="row card-body">
                            <div class="col-9">
                                <h5 class="card-title"><%= review.author.username %></h5>
                                <p class="card-text">
                                    <p class="starability-result" data-rating="<%= review.rating %>">Rated: <%= review.rating %> stars</p>
                                    <%= review.comment %>
                                </p>
                            </div>
                            <% if(currUser && currUser._id.equals(review.author._id)) { %>
                                <div class="col-3">
                                    <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                                        <button class="btn btn-sm btn-danger mt-1">Delete</button>
                                    </form>
                                    <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>/edit">
                                        <button class="btn btn-sm btn-warning mt-2">Edit</button>
                                    </form>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>
</div>

<script src="/js/map.js"></script>
<script>
document.addEventListener("DOMContentLoaded", function() {
    const checkIn = document.getElementById('checkIn');
    const checkOut = document.getElementById('checkOut');
    const totalPriceEl = document.getElementById('totalPrice');

    const basePrice = <%= listing.price || 0 %>;
    const taxRate = 0.18; // 18% GST
    const pricePerNight = Math.round(basePrice * (1 + taxRate));

    function calculateTotal() {
        if (!checkIn.value || !checkOut.value) {
            totalPriceEl.textContent = pricePerNight.toLocaleString("en-IN");
            return;
        }

        const start = new Date(checkIn.value);
        const end = new Date(checkOut.value);

        if (isNaN(start) || isNaN(end) || end <= start) {
            totalPriceEl.textContent = pricePerNight.toLocaleString("en-IN");
            return;
        }

        const nights = Math.ceil((end - start) / (1000 * 60 * 60 * 24));
        totalPriceEl.textContent = (pricePerNight * nights).toLocaleString("en-IN");
    }

    checkIn.addEventListener('change', calculateTotal);
    checkOut.addEventListener('change', calculateTotal);
});
</script>