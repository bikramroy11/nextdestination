<% layout("/layouts/boilerplate")  %>


<div class="row mt-3">
    <div class="col-8 offset-2">
        <h1 class="mb-3">Register Yourself</h1><hr>
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label mt-3">Username</label>
                <input type="text" name="username" placeholder="bikram roy" class="form-control"  required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please Choose A username</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label mt-3">Email</label>
                <input type="text" name="email" placeholder="bikramroycs@gmail.com" class="form-control"  required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please Choose A email</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label mt-3 ">Password</label>
                <input type="password" name="password" placeholder="password" class="form-control"  required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please Choose A password</div>
            </div>
            <button class="btn btn-primary mt-3">Register</button>
        </form>
    </div>
</div>  
            